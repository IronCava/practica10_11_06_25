<%- include('partials/_head') %>

<%
  // Fallback seguro: si no llega "name", intenta "nombre" y si no, "Usuario"
  const _name = (typeof name !== 'undefined' && name)
    ? name
    : (typeof nombre !== 'undefined' && nombre)
      ? nombre
      : 'Usuario';
%>

<section class="admin">
  <h1>Panel de administración</h1>
  <p>Bienvenida, <strong><%= _name %></strong></p>

  <!-- Enlace directo a productos -->
  <p><a class="btn" href="/productos">Ver productos</a></p>

  <!-- Logout -->
  <p><a href="/logout" class="btn">Cerrar sesión</a></p>
</section>

<%- include('partials/_foot') %>
